{%- style -%}
    .shell-container {
        width: 100%;
        display: flex;
        flex-flow: column;
        align-items: center;
    }
    .shell-container .shell {
        width: 100px;
        fill: url(#Fish-Gradient);
        display: block;
        animation: swarm 10s var(--animation-delay) infinite;
    }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    pbadding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="shell-container section-{{ section.id }}-padding">
{% liquid
    case section.settings.shell_variant
        when "1"
        render "shell1"
        when "2"
        render "shell2"
        when "3"
        render "shell3"
        when "4"
        render "shell4"
    endcase
%}
</div>

{% schema %}
{
  "name": "Shell",
  "settings": [
    {
        "type": "select",
    "id": "shell_variant",
    "options": [
      {
        "value": "1",
        "label": "1"
      },
      {
        "value": "2",
        "label": "2"
      },
      {
        "value": "3",
        "label": "3"
        },
        {
            "value": "4",
            "label": "4"
            }
        ],
        "default": "1",
        "label": "Shell variant"
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
  ],
  "presets": [
    {
      "name": "Shell",
      "category": "Image"
    }
  ]
}
{% endschema %}
